.large-hero
  position relative
  text-align: center
  border-bottom 10px solid mainblue
  &__textcontent
    position absolute
    top 50%
    left 0
    transform translateY(-50%)
    width 100%
  &__title
    font-weight: 300
    color mainblue
    font-size: 2.5rem
    margin 0
    +for_breakpoint(tablet)
      font-size: 4.8rem
  &__subtitle
    font-weight: 300
    color mainblue
    font-size 1.6rem
    +for_breakpoint(tablet)
      font-size 3rem
    margin 0
  &__description
    font-weight: 300
    max-width 30rem
    margin-left auto
    margin-right auto
    color white
    text-shadow 2px 2px 0 rgba(0,0,0,.1)
    font-size 1.2rem
    +for_breakpoint(tablet)
      font-size 1.875rem
  &__image
    display block
